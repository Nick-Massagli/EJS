<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
  
<!-- flash messages -->
 <%# message() %>
<!-- add error -->
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>
<!-- Add clasification -->
<div class="add-classification">
    <form action="/inv/add-classification" method="post">
        <label for="classification_name">Classification Name:</label>
        <input type="text" name="classification_name" id="classification_name" 
        value="<%= locals.classification_name %>" required
        pattern="^[a-zA-Z0-9]+$" 
        title="Classification name must not contain spaces or special characters.">
        <input type="submit" value="Add Classification">
    </form>
</div>