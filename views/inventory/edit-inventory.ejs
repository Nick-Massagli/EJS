<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
  
<!-- flash messages -->
<%- messages() %>
<!-- add error -->
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>
 <!-- Form to edit vehicle details -->
<div class="edit-inventory">
  <form action="/inv/edit-inventory" method="post" id="updateForm">
      <label for="classification_id">Classification:</label>
      <%- classificationList %>
      <label for="inv_make">Make:</label>
      <input type="text" name="inv_make" id="inv_make" value="<%= locals.inv_make %>" required>
      <label for="inv_model">Model:</label>
      <input type="text" name="inv_model" id="inv_model" value="<%= locals.inv_model %>" required>
      <label for="inv_year">Year:</label>
      <input type="number" name="inv_year" id="inv_year" value="<%= locals.inv_year %>" required>
      <label for="inv_description">Description:</label>
      <textarea name="inv_description" id="inv_description" required><%= locals.inv_description %></textarea>
      <label for="inv_price">Price:</label>
      <input type="number" name="inv_price" id="inv_price" value="<%= locals.inv_price %>" required>
      <label for="inv_miles">Miles:</label>
      <input type="number" name="inv_miles" id="inv_miles" value="<%= locals.inv_miles %>" required>
      <label for="inv_color">Color:</label>
      <input type="text" name="inv_color" id="inv_color" value="<%= locals.inv_color %>" required>
      <label for="inv_image">Image Path:</label>
      <input type="text" name="inv_image" id="inv_image" value="<%= locals.inv_image %>" required placeholder="'/images/vehicles/no-image.jpg'">
      <label for="inv_thumbnail">Thumbnail Path:</label>
      <input type="text" name="inv_thumbnail" id="inv_thumbnail" value = "<%= locals.inv_image %>" required placeholder="'/images/vehicles/no-image-tn.jpg' %>">
      <input type="submit" value="Update Vehicle" id="updateBtn" disabled>
      <input type="hidden" name="inv_id"
      <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"<% } %>>
    </form>
</div>
<script src="../../js/inv-update.js"></script>