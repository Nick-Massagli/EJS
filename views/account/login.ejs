<!-- Page Title -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } %>
<!-- messages -->
<%- messages() %>
<!-- Login Form -->
<div class="login-form">
    <form action="/account/login" method="post">
        <label for="account_email">Email:</label>
        <input type="text" name="account_email" id="account_email" required placeholder="Enter the email registered with us">
        <label for="account_password">Password:</label>
        <input type="password" name="account_password" id="account_password" required>
        <input type="submit" value="sign in">
    </form>
    <p>Don't have an account? <a href="/account/register">sign up</a></p>
</div>