<!-- Page Title -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } %>
<!-- Flash Messages -->
<%- messages() %>
<!-- Error Messages -->
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<section id="account-management-section">
    <div id="loginGreeting">
<!-- Personalized Greeting based on Account Type -->
<% if (locals.accountData) { %>
    <% if (locals.accountData.account_type === 'Client') { %>
        <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <% } else if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
        <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    </div>
    <!-- Inventory Management Section -->
    <div id="inventory-management-container">
        <div id="inventory-management">
        <h3>Inventory Management</h3>
        <p id="inventory-management-link"><a href="/inv/">Go to Inventory Management</a></p>
    <% } %>
        </div>
    <!-- Update Account Information Link -->
    <a id="update-account-link" href="/account/update/">Update Account Information</a>
<% } else { %>
    <p>Please log in to access this page.</p>
<% } %>

    </div>
</section>